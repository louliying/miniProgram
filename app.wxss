/* reset */

page {
    background-color: #f1f1f1;
    height: 100%;
    font-size: 32rpx;
    line-height: 1.6;
}

checkbox,
radio {
    margin-right: 10rpx;
}


form {
    width: 100%;
}

view,
text {
    font-family: "PingFang SC", "Heiti SC", "SF UI Text", "Helvetica Neue", "Roboto", "Droid Sans Fallback", "arial", "sans-serif";
    font-size: 29rpx;
    color: #333;
}


/* lib */

.strong {
    font-weight: bold;
}

.tc {
    text-align: center;
}


/* 在线客服组件 */

.custom-button {
    text-align: center;
    padding: 25rpx 0;
    width: 100%;
    position: relative;
}

.custom-button contact-button {
    opacity: 0;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}
.custom-button .custom-btn {
    opacity: 0;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}

.custom-button .server-icon {
    width: 34rpx;
    height: 32rpx;
    font-size: 0;
    display: inline-block;
    vertical-align: middle;
    background-repeat: no-repeat;
    background-size: 100% 100%;
    margin: 0 0 0 0;
    padding: 0;
    background-color: transparent;
    border: 0;
    background-image: url(https://s3.cximg.com/cms/carmall_Html5/resource/taolibao/images/ucenter/icon-server.png);
}

.custom-button .page-body-title {
    height: 32rpx;
    line-height: 150%;
    display: inline-block;
    vertical-align: middle;
    margin: 0 0 0 10rpx;
    font-size: 28rpx;
    color: #666666;
}


/* wxParse */

.wxParse-wrap {
    background-color: #fff;
    padding: 10rpx;
}


/* 清浮动clear */

.clear {
    clear: both;
    display: block;
    overflow: hidden;
    visibility: hidden;
    width: 0;
    height: 0;
}

.clearfix:before,
.clearfix:after {
    content: '.';
    display: block;
    overflow: hidden;
    visibility: hidden;
    font-size: 0;
    line-height: 0;
    width: 0;
    height: 0;
}

.clearfix:after {
    clear: both;
}

.clearfix {
    zoom: 1;
}


